<nav
  class="navbar navbar-expand-lg navbar-dark bg-info fixed-top font-monospace"
>
  <div class="container">
    <a class="navbar-brand" href="#">E-Commerce</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products">Product</a>
        </li>

        <!-- Checking for user logged in or not and he shuld be seller
        to use this adding new item -->
        <% if (currentUser && currentUser.role === 'seller') { %>
        <li class="nav-item">
          <a class="nav-link" href="/products/new">New</a>
        </li>
        <% } %>
      </ul>

      <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
        <!-- Using locals currentUser to check the user exist or not -->

        <% if (!currentUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>

        <% } else { %>

        <!-- To show the username in the nav bar -->

        <a class="nav-link pe-none">Hi, <%= currentUser.username %>!</a>

        <li class="nav-item">
          <a href="/user/cart" class="nav-link"
            ><i class="fas fa-shopping-cart"></i>
            <sup>
              <span class="badge bg-danger"><%= currentUser.cart.length%></span>
            </sup>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
